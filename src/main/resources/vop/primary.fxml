<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vop.PrimaryController">
    <Label text="Message" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" prefWidth="60" prefHeight="20"/>
    <TextField fx:id="startMessage" text="Message to encrypt" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="20" prefHeight="20" prefWidth="500"/>

    <RadioButton fx:id="atbashButton" text="Atbash" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="150" prefHeight="20"/>
    <RadioButton fx:id="ceasarButton" text="Caesar" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="450" prefHeight="20"/>
    <Spinner fx:id="caesarSpinner" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="520" prefWidth="60" prefHeight="20"/>

    <Button fx:id="encryptButton" onAction="#processMessage" text="Encrypt" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="100" prefWidth="60" prefHeight="20"/>
    <TextField fx:id="encryptedMessage" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="100" prefWidth="500" prefHeight="20"/>

    <Button fx:id="decryptButton" onAction="#processMessage" text="Decrypt" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="140" prefWidth="60" prefHeight="20"/>
    <TextField fx:id="decryptedMessage" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="140" prefWidth="500" prefHeight="20"/>
</AnchorPane>
